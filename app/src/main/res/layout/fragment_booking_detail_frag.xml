<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/darkblue"
android:orientation="vertical"
tools:context=".booking_detail_frag">

<ProgressBar
    android:id="@+id/login_progress"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="200dp"
    android:visibility="gone" />

<TextView
    android:id="@+id/tvLoad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:text="Loading...please wait..."
    android:textColor="#FF7800"
    android:textStyle="bold"
    android:visibility="gone" />

<LinearLayout
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/bus_logo"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            app:srcCompat="@drawable/ic_web_hi_res_512" />

        <TextView
            android:id="@+id/booking_detail_frag_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Booking Detail"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_booking_detail_frag_tvBookingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"

            android:layout_marginRight="25dp"
            android:gravity="center_horizontal|center_vertical"
            android:hint="Bus Name"
            android:text="BUS NAME"
            android:textColor="#FF7800"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_booking_detail_frag_tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Date"
            android:textColor="#FF7800"
            android:textStyle="bold" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Time"
                android:textAllCaps="true"
                android:textColor="#FF7800"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="FROM"
                android:textAllCaps="true"
                android:textColor="#FF7800"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="TO"
                android:textAllCaps="true"
                android:textColor="#FF7800"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/schedule" />

            <TextView
                android:id="@+id/fragment_booking_detail_frag_tvTime1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="5"
                android:gravity="center_horizontal|center_vertical"
                android:text="TIME"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_booking_detail_frag_tvFrom1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="5"
                android:gravity="center_horizontal|center_vertical"
                android:text="FROM"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_booking_detail_frag_tvTo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="5"
                android:gravity="center_horizontal|center_vertical"
                android:text="TO"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />


    </LinearLayout>
</LinearLayout>
</LinearLayout>